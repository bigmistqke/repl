{
  "compilerOptions": {
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vite/client"],
    "paths": {
      "src": ["./src"],
      "@bigmistqke/repl": ["./src"],
      "@bigmistqke/repl/runtime": ["./src/runtime"],
      "@bigmistqke/repl/plugins/*": ["./src/plugins/*"],
      "@bigmistqke/repl/editor/monaco": ["./src/editor/monaco"],
      "@bigmistqke/repl/editor/monaco/themes/*": ["./src/editor/monaco/themes/*"],
      "@bigmistqke/repl/editor/shiki": ["./src/editor/shiki"],
      "@bigmistqke/repl/transform/*": ["src/transform/*"],
      "@bigmistqke/repl/transform-module-paths/*": ["./src/transform-module-paths/*"],
      "@bigmistqke/repl/file-extra/css-module": ["src/file-extra/css-module"],
      "@bigmistqke/repl/file-extra/wat": ["src/file-extra/wat"]
    }
  },
  "include": ["src", "dist"]
}
